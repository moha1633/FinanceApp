@model FinanceApp.Models.Expense

<div class="container mt-5">
    <h2>⚠️ Bekräfta borttagning</h2>

    <div class="alert alert-danger mt-3">
        Är du säker på att du vill ta bort följande utgift?
    </div>

    <dl class="row">
        <dt class="col-sm-2">Beskrivning</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Belopp</dt>
        <dd class="col-sm-10">@Model.Amount.ToString("C", new System.Globalization.CultureInfo("sv-SE"))</dd>

        <dt class="col-sm-2">Kategori</dt>
        <dd class="col-sm-10">@Model.Category</dd>

        <dt class="col-sm-2">Datum</dt>
        <dd class="col-sm-10">@Model.Date.ToString("yyyy-MM-dd")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">🗑️ Ja, ta bort</button>
        <a asp-action="Index" class="btn btn-secondary">Avbryt</a>
    </form>
</div>
